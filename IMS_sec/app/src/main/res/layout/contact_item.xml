<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#2DFFFFFF"
    >

    <TextView
        android:id="@+id/list_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nishant Abhishek"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/list_contact_callImage"
            android:src="@drawable/ic_call"
            android:layout_gravity="end"
            ></ImageView>



        <TextView
            android:id="@+id/list_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:text="9835857489"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            ></TextView>

    </LinearLayout>


    <TextView
        android:id="@+id/list_contact_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID : QWESFASFFFES"
        android:textSize="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        ></TextView>


</LinearLayout>